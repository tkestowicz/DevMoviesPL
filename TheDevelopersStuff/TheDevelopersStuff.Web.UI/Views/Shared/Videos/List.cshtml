@using TheDevelopersStuff.Backend.ViewModels
@model VideosListViewModel

<div class="row">
    <h3 class="pull-left text-primary col-sm-3 col-md-3 col-lg-3">Filmy</h3>
    @Html.React("VideosOrder", new { 
        componentName = ViewBag.VideosOrderByComponentName, 
        currentSettings = Model.Query.OrderBy, 
        orders = new []
        {
            new { field = "ChannelInfo.Name", label = "nazwa kanału"},
            new { field = "PublicationDate", label = "data publikacji"},
            new { field = "Title", label = "tytuł"},
            new { field = "Views", label = "najpopularniejsze"},
        }, 
        directions = new
        {
            ascending = OrderDirectionEnum.Ascending,
            descending = OrderDirectionEnum.Descending
        } 
    })
</div>
@Html.React("VideosList", new
{
    videos = Model.Videos,
    captionLength = 180
})

@Html.React("Pagination", new
{
    componentName = ViewBag.VideosPaginationComponentName,
    currentSettings = Model.Query.Pagination,
    size = 5
})
