<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Scripts.Render("~/bundles/jquery")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/main")
    </head>
    <body class="container-fluid">
        <div class="page-header" style="margin-bottom: 5px;">
            <h1 class="text-info">@Html.ActionLink("Dev stuff", "Index", "Videos")</h1>
        </div>
        @Html.Partial("Menu")
        @RenderBody()
        
        <footer class="row">
            <div class="col-xs-12">
                <p class="pull-right">Realizacja: <a href="http://tymoteuszkestowicz.com">Tymoteusz Kęstowicz</a></p>
                <p>Dev Stuff &copy; 2014</p>
            </div>
        </footer>
       
        @RenderSection("scripts", required: false)

        @Html.ReactInitJavaScript()
    </body>
</html>
